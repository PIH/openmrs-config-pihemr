<!--
Patient registration metadata: when, where, who.
Provides form for "retrospective" check-in.
-->

<htmlform formUuid="6F6E6FA0-1E99-41A3-9391-E5CB8A127C11" formName="Patient Registration" formEncounterType="873f968a-73a8-4f9c-ac78-9f4778b751b6" formVersion="1.0">


    <ifMode mode="VIEW" include="false">
        <script type="text/javascript">

            jq(function() {

            // remove the first title span that is automatically generated by the HFE
            if ( jq("#patientRegistration span.title").length ) {
            jq("#patientRegistration span.title").remove();
            }

            });
        </script>
    </ifMode>

    <section id="patientRegistration" sectionTag="section" headerStyle="title" headerCode="">

        <span id="most-recent-encounter-title" style="display:none"><!--The Most Recent Encounter app in Core Apps replaces this with the "most recent" label--></span>

        <ifMode mode="VIEW" include="false">
            <h2><uimessage code="zl.registration.patient.registration.header"/></h2>
        </ifMode>

        <fieldset class="required">
            <div>
                <h3>
                    <uimessage code="zl.date"/>
                </h3>

                <p class="left">
                    <encounterDate id="encounterDateField" showTime="false" />
                </p>
            </div>

            <div>
                <h3>
                    <uimessage code="emr.patientDashBoard.provider"/>
                </h3>
                <p class="left">
                    <encounterProviderAndRole encounterRole="cbfe0b9d-9923-404c-941b-f048adc8cdc0" required="true"/>
                </p>
            </div>

            <div>
                <h3>
                    <uimessage code="mirebalais.retrospectiveCheckin.location.label"/>
                </h3>
                <p class="left">
                    <encounterLocation id="encounterLocationField" />
                </p>
            </div>

        </fieldset>

    </section>

    <ifMode mode="VIEW" include="false">
        <div id="buttons">
            <button class="submitButton confirm right" onclick="submitHtmlForm()"><uimessage code="mirebalais.save"/><i class="icon-spinner icon-spin icon-2x" style="display: none; margin-left: 10px;"></i></button>
            <button type="button" class="cancel"><uimessage code="emr.cancel"/></button>
        </div>
    </ifMode>

</htmlform>
