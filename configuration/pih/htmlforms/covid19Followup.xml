                    <render map="CIEL:166002" text="TCO2" />
                    <render map="CIEL:163596" text="HCO3" />
                    <render map="CIEL:163599" text="BE" />
                    <render map="CIEL:163597" text="sO2" />
                    <render map="CIEL:165997" text="Lactate" />
