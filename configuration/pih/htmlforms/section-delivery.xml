                    </div>
                    <div>
                        <label>
                            <uimessage code="pihcore.fetal"/>
                        </label>

                        <repeat>
                            <template>
                                <obs conceptId="PIH:13572" answerConceptId="{concept}" style="checkbox"/>
                            </template>
