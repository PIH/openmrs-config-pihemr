                            <render concept="CIEL:117703" name="sickle-cell anemia"/>
                            <render concept="CIEL:116023" name="cervical cancer" />
                            <render concept="CIEL:113918" name="peripartum cardiomyopathy"/>
                            <render concept="CIEL:139071" name="heart disease" />
                            <render concept="CIEL:166437" name="perimortem c-section" />
                            <render concept="CIEL:120147" name="condyloma" />
                            <render concept="CIEL:138706" name="herpes simplex virus hsv" />
