    <ifMode mode="VIEW" include="false">

        <script type="text/javascript">

            jq(document).ready(function() {
                // add handler validation to the HTML form
                htmlForm.getBeforeValidation().push(function() {
                    var valid = true;

                    // validate that if a disposition has been selected, all the fields associated with that disposition have also been filled out
                    jq('#disposition .field-error').first().html('').hide(); // hide any previous error

                    if (jq('#disposition select:first').val() != '' &amp;&amp;
                        (jq('#disposition select:visible').is(function() { return jq(this).val() == ''; })
                        || jq('#disposition input:visible').is(function() { return jq(this).val() == ''; }))) {
                            jq('#disposition .field-error').first().append('<uimessage code="pihcore.errors.fieldsAssociatedWithDisposition"/>').show();
                            valid = false;
                    }
                    return valid;
                });

                setUpGestationalAgeAtBirth('<lookup expression="fn.latestObs('CIEL:1427').getValueDatetime().getTime()"/>');

                jq('#disposition select:first').change(function() {
                    jq('#disposition .field-error').first().html('').hide(); // hide any previous error if disposition is changed
                });

                // handlers for next and submit buttons, see nextAndSubmitButtons.js
                setUpNextAndSubmitButtons();
            });
        </script>
    </ifMode>

    <ifMode mode="VIEW" include="false">
        <script type="text/javascript">

            jq(function() {

                var hasValue = function(element) {
                    return jq(element).find('.baby-name input').val();
                };

                var hideOtherBabies = function() {
                    jq('#baby-2').hide();
                    jq('#baby-3').hide();
                    jq('#baby-4').hide();
                };

                if (!hasValue('#baby-2') &amp;&amp; !hasValue('#baby-3') &amp;&amp; !hasValue('#baby-4')) {
                    hideOtherBabies();
                    jq('#show-more-babies-button').show();
                }

                jq('#show-more-babies-button').click(function() {
                    jq('.baby').show();
                    jq('#show-more-babies-button').hide();
                    jq('#show-less-babies-button').show();
                });

                jq('#show-less-babies-button').click(function() {
                    hideOtherBabies();
                    jq('#show-less-babies-button').hide();
                    jq('#show-more-babies-button').show();
                });

            })

        </script>
    </ifMode>

    <section id="labor-delivery" sectionTag="fieldset" headerTag="legend"
             headerStyle="title" headerCode="pihcore.delivery.title">
        <div class="section-container">

            <p class="date-one-line">
                <label>
                    <uimessage code="pihcore.mch.deliveryDateTime"/>
                </label>

                <obs id="deliveryDate" conceptId="CIEL:5599" defaultDatetime="today" />
            </p>

            <div class="two-columns">
                <div>
                    <span id="calculated-edd-wrapper">
                        <span id="calculated-edd-label">
                            <uimessage code="pihcore.calculatedEstimatedDeliveryDate"/>:&#160;
                        </span>
                        <span id='calculated-edd' class="value">
                            <lookup expression="fn.latestObs('CIEL:1427').valueDatetime"/>
                        </span>
                    </span>
                </div>
                <div>
                    <span id="calculated-gestational" class="hidden">
                        <span id="calculated-gestational-age-label">
                            <uimessage code="pihcore.calculatedGestationalAge"/>:&#160;
                        </span>
                        <span id='calculated-gestational-age-value' class="value"></span>
                    </span>
                </div>
            </div>
            <br/>

            <h4>
                <uimessage code="pihcore.labor" />
            </h4>
            <p class="side-by-side">
                <label>
                    <uimessage code="pihcore.partogram" />
                </label>
                <obs conceptId="PIH:13964" style="radio"
                     answerConceptIds="CIEL:1065,CIEL:1066" />
            </p>

            <h4>
                <uimessage code="pihcore.anc.delivery.title" />
            </h4>

            <div>
                <!-- Obstructed labor -->
                <p class="side-by-side">
                    <label>
                        <uimessage code="pihcore.dystocia" />
                    </label>
                    <obs conceptId="CIEL:163449" style="radio" answerSeparator=""
                         answerConceptIds="CIEL:163447,CIEL:163448,CIEL:5622"
                         answerCodes="pihcore.mechanical,pihcore.dynamic,pihcore.other" />
                </p>

                <!-- Prolapsed cord -->
                <p class="side-by-side">
                    <label>
                        <uimessage code="pihcore.prolapseCord" />
                    </label>
                    <obs conceptId="CIEL:113617" style="radio" answerSeparator=""
                         answerConceptIds="CIEL:1065,CIEL:1066" />
                </p>
            </div>
            <br/>

            <div class="two-columns">
                <div id="vaginalBleeding">
                    <p class="side-by-side">
                        <label>
                            <uimessage code="pihcore.vaginalHemorr" />
                        </label>
                        <obs id="hemLine" style="radio"
                             conceptId="CIEL:147232"
                             answerConceptIds="CIEL:1065,CIEL:1066" >
                            <controls>
                                <when value="CIEL:1065" thenDisplay="#bleeding-diagnosis" />
                            </controls>
                        </obs>

                        <div id="bleeding-diagnosis">
                            <repeat>
                                <template>
                                    <obsgroup groupingConceptId="PIH:Visit Diagnoses" showIfEmpty="false">
                                        <obs conceptId="PIH:DIAGNOSIS" answerConceptId="{concept}" style="checkbox"/>
                                    </obsgroup>
                                </template>
                                <render concept="CIEL:230"    name="postpartum hemorrhage" />
                                <render concept="CIEL:136601" name="intrapartum hemorrhage" />
                                <render concept="CIEL:130108" name="placental abruption"/>
                                <render concept="CIEL:114127" name="placenta praevia"/>
                                <render concept="CIEL:127259" name="uterus rupture"/> <!-- PIH:7566/CIEL:127259 -->
                            </repeat>
                            <!-- Add free-text for other vaginal bleeding -->
                            <obsgroup groupingConceptId="PIH:Visit Diagnoses" showIfEmpty="false">
                                <obs conceptId="PIH:DIAGNOSIS" style="checkbox"
                                     answerConceptId="CIEL:150802" answerCode="pihcore.other"
                                     showCommentField="true" commentFieldLabel="" />
                            </obsgroup>

                            <p class="side-by-side">
                                <br/>
                                <label>
                                    <uimessage code="pihcore.estBloodLossPPH"/>
                                </label>
                                <br/>
                                <obs conceptId="CIEL:162092" style="radio"
                                     answerConceptIds="CIEL:1499,CIEL:1500"
                                     answerCodes="pihcore.modBloodLoss,pihcore.sevBloodLoss"/>
                             </p>
                        </div>
                    </p>

                    <p class="side-by-side">
                        <!-- Transfusion -->
                        <label>
                            <uimessage code="pihcore.transfusion"/>
                        </label>
                        <obs conceptId="CIEL:1063" style="radio" answerSeparator=""
                             answerConceptIds="CIEL:1065,CIEL:1066"/>
                    </p>
                </div>

                <div>
                    <repeat>
                        <template>
                            <p class="side-by-side">
                                <label>
                                    <uimessage code="pihcore.{name}" />
                                </label>
                                <br/>
                                <obs conceptId="{concept}"
                                     answerConceptIds="{answers}" answerCodes="{codes}"
                                     style="radio" answerSeparator="" />
                            </p>
                        </template>
                        <render concept="CIEL:163450" answers="CIEL:1065,CIEL:1066"
                                name="lateCordClamping" codes="emr.yes,emr.no" />
                        <render concept="PIH:13550" answers="CIEL:1115,CIEL:166425"
                                name="placentaDelivery" codes="pihcore.natural,pihcore.artificial" />
                        <render concept="CIEL:163452" answers="CIEL:1065,CIEL:1066"
                                name="fullAMTSL" codes="emr.yes,emr.no" />
                        <render concept="CIEL:163454" answers="CIEL:163455,CIEL:163456"
                                name="placenta" codes="pihcore.complete,pihcore.incomplete" />
                        <render concept="CIEL:164900" answers="CIEL:164899,CIEL:127244"
                                name="intactMembranes" codes="emr.yes,emr.no" />
                        <render concept="CIEL:127592" answers="CIEL:1065,CIEL:1066"
                                name="retainedPlacenta" codes="emr.yes,emr.no" />
                        <render concept="CIEL:114244" answers="CIEL:1065,CIEL:1066"
                                name="perinealLac" codes="emr.yes,emr.no" />
                    </repeat>

                    <label>
                        <uimessage code="pihcore.consult.procedure" />
                    </label>
                    <repeat>
                        <template>
                            <obs conceptId="CIEL:1651" answerConceptId="{concept}" />
                        </template>
                        <render concept="CIEL:164157" name="suture perineum" />
                        <render concept="CIEL:5577"   name="episiotomy" />
                    </repeat>
                </div>
            </div>
            <br/>

